{
  "name": "jira-plus",
  "version": "1.0.0",
  "description": "Extension to improve JIRA experience",
  "private": true,
  "scripts": {
    "watch": "yarn clean && webpack --mode=development --watch --config config/webpack.config.js",
    "clean": "rm -rf build && rm -f build.zip",
    "build": "yarn clean && build:webcomponents && webpack --mode=production --config config/webpack.config.js && yarn zip",
    "build:firefox": "yarn clean && build:webcomponents && webpack --mode=production --config config/webpack.firefox.js && yarn zip",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "lint": "eslint . --ext .ts",
    "zip": "rm -f build.zip && cd build && zip -r ../build.zip * && cd ..",
    "build:webcomponents": "cd src/jira-plus-webcomponents && yarn build && cd .. && yarn install --force"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "@types/jquery": "^3.5.14",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.21.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.6.1",
    "prettier": "^2.7.1",
    "sass": "^1.54.4",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "jira-plus-webcomponents": "file:src/jira-plus-webcomponents/jira-plus-webcomponents-0.0.1.tgz",
    "jquery": "^3.6.0"
  }
}
