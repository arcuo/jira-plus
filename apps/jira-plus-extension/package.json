{
  "name": "jira-plus",
  "version": "1.0.0",
  "description": "Extension to improve JIRA experience",
  "private": true,
  "scripts": {
    "dev": "pnpm clean && webpack --mode=development --watch --config config/webpack.config.js",
    "clean": "rm -rf build && rm -f build.zip",
    "build": "pnpm clean && webpack --mode=production --config config/webpack.config.js && pnpm zip",
    "build:firefox": "pnpm clean && webpack --mode=production --config config/webpack.firefox.js && yarn zip",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "lint": "eslint . --ext .ts",
    "zip": "rm -f build.zip && cd build && zip -r ../build.zip * && cd ..",
    "test": "vitest",
    "test:watch": "vitest dev",
    "prepack": "pnpm test"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "@types/jquery": "^3.5.14",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.6.1",
    "sass": "^1.54.4",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vitest": "^0.28.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "hybrids": "^8.1.13",
    "jquery": "^3.6.0",
    "ts-debounce": "^4.0.0",
    "utils": "workspace:*",
    "popup": "workspace:*"
  }
}
